<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Hike</h1>

        <div class="col-6 offset-3">
            <form action="/hikes" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hike[title]" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hike[location]" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Hike Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" name="hike[price]" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hike[description]" required></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                </div>

                <div class="mb-3 custom-file">
                    <label for="image" class="form-label custom-file-label">Add Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
               
                <div class="mb-3">
                    <button class="btn btn-success">Add Hike</button>
                </div>
            </form>

            <a class="btn btn-dark mb-3" href="/hikes">Back to All Hikes</a>
        </div>
    </div>
