<% layout('layouts/boilerplate') %>
    <div class="cluster-map" id="cluster-map"></div>

    <h1>All hikes</h1>

    <div>
        <a class="btn btn-dark mb-2" href="/hikes/new">Add Hike</a>
    </div>
    
        <% for (let hike of hikes) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(hike.images.length) { %>
                        <img src="<%= hike.images[0].url %>" class="img-fluid" style="max-height: 300px" alt="">
                        <% } else { %>
                            <!-- default picture to fallback if no image uploaded -->
                            <img src="https://source.unsplash.com/800x450/?grass" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= hike.title %>
                            </h5>
                            <p class="card-text">
                                <%= hike.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= hike.location %>
                                </small>
                            </p>
                            <a href="/hikes/<%= hike._id %>" class="btn btn-primary">View <%= hike.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const hikes = {features: <%- JSON.stringify(hikes) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>