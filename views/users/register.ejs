<% layout('layouts/boilerplate') %>


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-2 mb-2">
        <h4 class="card-title">Sign Up</h1>
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1591823666971-343cec7c69b2?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTF8fG1vdW50YWluJTJDJTIwdHJhaWx8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" class="card-img-top w-100" alt="card image top">
            </div>
            <div class="card-body">
                <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-success">Register</button>
                    </div>
                </form>
            </div>
    </div>
    
</div>
